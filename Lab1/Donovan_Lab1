<script>
    
    alert("Hello, and welcome to my map!")
    
    function AboutMe(){
        alert("Hey! My name (the creator of this web map) is Mikayla Donovan. I'm an environmental science student learning web mapping.");
    }
    var map = L.map('map', {zoomSnap: 0.25}).setView([30.9, 10.14], 2.25);
    
    L.tileLayer('https://api.maptiler.com/maps/streets/{z}/{x}/{y}.png?key=TGQCxyBRvyf29NNtjFcv', {
        attribution:'<a href="https://www.maptiler.com/copyright/" target="_blank">&copy; MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">&copy; OpenStreetMap contributors</a>',
    }).addTo(map);
    
    L.control.scale().addTo(map);
    
    var leafletIcon = L.icon ({
        iconUrl: 'https://www.iconfinder.com/data/icons/small-n-flat/24/678111-map-marker-512.png',
        iconSize: [50,50],
        iconAnchor: [22,50],
        popupAnchor: [3,-50]
     })
    
    
    var vanIsland = L.marker([49.68, -124.99],{icon:leafletIcon}).addTo(map); 
    var Sydney = L.marker([-33.96, 151.25],{icon:leafletIcon}).addTo(map);
    var Mexico = L.marker([31.87, -116.60],{icon:leafletIcon}).addTo(map);
    var Calgary = L.marker([51.06, -114.11],{icon:leafletIcon}).addTo(map);
    var Vancouver = L.marker([49.10, -122.66],{icon:leafletIcon}).addTo(map);
    var France = L.marker([45.04, 3.88], 
    {icon:leafletIcon}).addTo(map);
    var Rio = L.marker([-22.91, -43.17], 
    {icon:leafletIcon}).addTo(map);
    vanIsland.bindPopup("<img src=https://upload.wikimedia.org/wikipedia/commons/thumb/d/d4/Kennedy_Lake_along_Highway_4.jpg/1200px-Kennedy_Lake_along_Highway_4.jpg style=width:300px;height:150px;> <b> Vancouver Island </b><br> I was born here!").openPopup(onclick);
    <!--citation for vanIsland : https://upload.wikimedia.org/wikipedia/commons/thumb/d/d4/Kennedy_Lake_along_Highway_4.jpg/1200px-Kennedy_Lake_along_Highway_4.jpg-->
    Sydney.bindPopup("<img src=https://upload.wikimedia.org/wikipedia/commons/thumb/e/eb/The_Sydney_Opera_House_at_dusk.jpg/1920px-The_Sydney_Opera_House_at_dusk.jpg style=width:300px;height:150px;> <b> Sydney </b><br> I worked here in 2014! ").openPopup(onclick);
     <!-- citation for Sydney: https://upload.wikimedia.org/wikipedia/commons/thumb/e/eb/The_Sydney_Opera_House_at_dusk.jpg/1920px-The_Sydney_Opera_House_at_dusk.jpg-->
    Mexico.bindPopup("<img src=https://farm4.staticflickr.com/3226/2993119641_0dcaca4e69_z.jpg style=width:300px;height:150px;> <b> Ensenada </b><br> I spent summer 2011 here! ").openPopup(onclick);
    <!-- citation for mexico : https://farm4.staticflickr.com/3226/2993119641_0dcaca4e69_z.jpg-->
    Calgary.bindPopup("<img src=https://upload.wikimedia.org/wikipedia/commons/thumb/6/6e/Downtown_Calgary_2016_-_Kevin_Cappis.jpg/1200px-Downtown_Calgary_2016_-_Kevin_Cappis.jpg style=width:300px;height:150px;><b> Calgary </b><br> I moved here for University! ").openPopup(onclick);
     <!-- citation for Calgary: https://upload.wikimedia.org/wikipedia/commons/thumb/6/6e/Downtown_Calgary_2016_-_Kevin_Cappis.jpg/1200px-Downtown_Calgary_2016_-_Kevin_Cappis.jpg-->
    Vancouver.bindPopup("<img src=https://upload.wikimedia.org/wikipedia/commons/8/80/English_Bay%2C_Vancouver%2C_BC.jpg style=width:300px;height:150px;><b> Vancouver </b><br> I lived here after high school! ").openPopup(onclick);
    <!-- citation for vancouver: https://upload.wikimedia.org/wikipedia/commons/8/80/English_Bay%2C_Vancouver%2C_BC.jpg-->
    Rio.bindPopup("<img src=https://upload.wikimedia.org/wikipedia/commons/a/a0/Rio_de_Janeiro_Helicoptero_47_Feb_2006.jpg style=width:300px;height:150px;> <b> Rio </b><br> I travelled here last year! ").openPopup(onclick);
     <!-- citation for Rio: https://upload.wikimedia.org/wikipedia/commons/a/a0/Rio_de_Janeiro_Helicoptero_47_Feb_2006.jpg-->
    France.bindPopup("<img src=https://www.lepuyenvelay-tourisme.fr/wp-content/uploads/2018/07/le-puy-en-velay-810x405.jpg style=width:300px;height:150px;> <b> France </b><br> I worked here in 2015! ").openPopup(Map);
     <!-- citation for France: https://www.lepuyenvelay-tourisme.fr/wp-content/uploads/2018/07/le-puy-en-velay-810x405.jpg
         -->
